<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bg_dialog_book_add"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_book_update_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/blue_light"
            android:text="取消"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:gravity="center"
            android:textSize="20sp"
            android:text="编辑账本"/>

        <TextView
            android:id="@+id/tv_book_update_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/blue_light"
            android:text="确定"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray2"
        android:padding="15dp"
        android:background="@color/bg_gray_light"
        android:text="账本名称"/>

    <EditText
        android:id="@+id/et_book_update_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:background="@null"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray_light"/>

    <TextView
        android:id="@+id/tv_book_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_light"
        android:padding="15dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/book_delete"/>

</LinearLayout>